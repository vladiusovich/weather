{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@api/*": ["src/core/api/*"],
            "@services/*": ["./src/services/*"],
            "@store/*": ["src/appStore/*"],
            "@appTypes/*": ["./src/types/*"],
            "@utils/*": ["./src/utils/*"],
            "@validation/*": ["./src/validation/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@form/*": ["src/core/form/*"],
            "@db/*": ["./src/core/db/*"],
            "@theme/*": ["./src/theme/*"],
            "@assets/*": ["./assets/*"],
            "@features/*": ["src/features/*"],
            "@shared/*": ["src/shared/*"],
            "@ui": ["src/shared/components/ui/index.ts"],
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
    ]
}
