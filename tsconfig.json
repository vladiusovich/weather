{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@api/*": ["./src/api/*"],
            "@services/*": ["./src/services/*"],
            "@store/*": ["./src/store/*"],
            "@appTypes/*": ["./src/types/*"],
            "@utils/*": ["./src/utils/*"],
            "@validation/*": ["./src/validation/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@form/*": ["./src/form/*"],
            "@db/*": ["./src/db/*"],
            "@theme/*": ["./src/theme/*"],
            "@assets/*": ["./assets/*"],
            "@features/*": ["./src/components/features/*"],
            "@shared/*": ["./src/components/shared/*"],
            "@ui": ["./src/components/shared/components/ui/index.ts"],
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
    ]
}
